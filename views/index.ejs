<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Files List</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <script src="https://unpkg.com/ionicons@5.5.2/dist/ionicons.js"></script>
</head>
<body>
    <div class="container">
        <h1>Files List</h1>

        <form action="/search" method="get" class="search-form">
            <input type="text" name="query" placeholder="Search files..." required>
            <button type="submit">Search</button>
        </form>
        
        
        <ul class="file-list">
            <% files.forEach(file => { %>
                <li class="one_item">
                    <a href="/files/<%= file %>"><%= file %></a>
                    
                    <a href="/download/<%= file %>" class="download-button">
                         <ion-icon name="cloud-download-outline"></ion-icon>
                    </a>
                    
                    <hr class="divider">
                </li>
            <% }) %>
        </ul>
        <a href="/create" class="create-file">Create New File</a>
        <a href="/upload" class="create-file">Upload New File</a>

        <div id="searchResultsModal" class="modal">
            <div class="modal-content">
                <span class="close-button">&times;</span>
                <h2>Search Results</h2>
                <ul id="searchResultsList"></ul>
            </div>
        </div>
    </div>
</body>
</html>
